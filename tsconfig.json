// For es6 version
{
  "version": "2.5.3",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "outDir": "dist",
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}


